{
    "manifest_version": 2,
    "name": "showbugs",
    "description": "显示 bugfree 上面的 bug",
    "version": "1.3",
    "permissions": ["<all_urls>", "storage"],
    "background": {
      "scripts": ["js/ajax.min.js", "js/background.js", "js/livereload.js"]
    },
	"icons": {
		"128": "img/logo.png"
	},
	"browser_action": {
		"default_icon": "img/logo.png",
		"default_popup": "popup.html"
	}
}
